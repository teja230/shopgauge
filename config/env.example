# =============================================================================
# ShopGauge Environment Configuration Example
# =============================================================================
# Copy this file to your project root and rename to .env
# Update values according to your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_URL=jdbc:postgresql://localhost:5432/storesight
DB_USER=storesight
DB_PASS=storesight

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8080
BACKEND_URL=http://localhost:8080

# =============================================================================
# SHOPIFY CONFIGURATION
# =============================================================================
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_API_VERSION=2023-10
SHOPIFY_ADMIN_BASE_URL=https://{shop}.myshopify.com/admin
SHOPIFY_REDIRECT_URI=https://api.shopgaugeai.com/api/auth/shopify/callback

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:5173

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# COMPETITOR DISCOVERY APIs
# =============================================================================
# SerpAPI (Primary)
SERPAPI_KEY=your_serpapi_key_here
SERPAPI_BASE_URL=https://serpapi.com/search.json
SERPAPI_MAX_RESULTS=3

# Scrapingdog API (Secondary)
SCRAPINGDOG_KEY=your_scrapingdog_key_here
SCRAPINGDOG_BASE_URL=https://api.scrapingdog.com/google
SCRAPINGDOG_MAX_RESULTS=10

# Serper API (Tertiary)
SERPER_KEY=your_serper_key_here
SERPER_BASE_URL=https://google.serper.dev/search
SERPER_MAX_RESULTS=10

# =============================================================================
# DISCOVERY CONFIGURATION
# =============================================================================
DISCOVERY_MULTI_SOURCE_ENABLED=true
DISCOVERY_FALLBACK_ENABLED=true
DISCOVERY_MAX_PROVIDERS=3
DISCOVERY_PROVIDER=multi-source
DISCOVERY_ENABLED=true
DISCOVERY_INTERVAL_HOURS=24
DISCOVERY_MAX_RESULTS=10

# =============================================================================
# ENVIRONMENT PROFILES
# =============================================================================
# Set to: dev, staging, prod
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================
# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL=INFO

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL in minutes
CACHE_TTL_MINUTES=120

# =============================================================================
# NOTIFICATION CLEANUP
# =============================================================================
NOTIFICATIONS_CLEANUP_ENABLED=true
NOTIFICATIONS_CLEANUP_RETENTION_DAYS=30
NOTIFICATIONS_CLEANUP_BATCH_SIZE=100
NOTIFICATIONS_CLEANUP_MAX_READ=50
NOTIFICATIONS_CLEANUP_MAX_UNREAD=100

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable debug endpoints
DEBUG_ENABLED=true

# Auto-deploy trigger for Render
AUTO_DEPLOY_TRIGGER=on 